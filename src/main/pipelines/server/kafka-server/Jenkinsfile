pipeline {
    agent any

    environment {
            REPO_URL = 'https://github.com/maurolisena/kafka-server.git'
            BRANCH = 'main'
            PROJECT_DIR = 'kafka-server'
    }

    stages {

        stage('Clonar c√≥digo fuente') {
            steps {
                git branch: "${BRANCH}", credentialsId: 'GitHub', url: "${REPO_URL}"
            }
        }
        stage('Levantar servicios') {
            steps {
                sh 'docker compose up -d'
            }
        }

        stage('Verificar servicios') {
            steps {
                sh 'docker ps'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado'
        }
    }
}