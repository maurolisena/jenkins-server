pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/maurolisena/eureka-server.git'
        BRANCH = 'master'
        PROJECT_DIR = 'eureka-server'
    }

    stages {

        stage('Clonar c√≥digo fuente') {
            steps {
                git branch: "${BRANCH}", credentialsId: 'GitHub', url: "${REPO_URL}"
            }
        }

        stage('Levantar servicios') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh 'docker compose up -d'
               }
            }
        }

        stage('Verificar servicios') {
            steps {
                sh 'docker ps'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado'
        }
    }
}